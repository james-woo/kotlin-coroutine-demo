<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blueRacer"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"/>

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/cheatButton"
            android:text="Cheat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/startButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <SeekBar
            android:id="@+id/redRacer"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:theme="@style/AppTheme.red"
            android:tooltipText="Red"
            android:max = "1000"
            android:thumb="@drawable/ic_android_red_64dp"
            android:progressDrawable="@drawable/custom_seekbar_red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>

    <SeekBar
            android:id="@+id/greenRacer"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:theme="@style/AppTheme.green"
            android:tooltipText="Green"
            android:max = "1000"
            android:thumb="@drawable/ic_android_green_64dp"
            android:progressDrawable="@drawable/custom_seekbar_green"
            app:layout_constraintTop_toBottomOf="@+id/redRacer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>

    <SeekBar
            android:id="@+id/blueRacer"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:theme="@style/AppTheme.blue"
            android:tooltipText="Blue"
            android:max = "1000"
            android:thumb="@drawable/ic_android_blue_64dp"
            android:progressDrawable="@drawable/custom_seekbar_blue"
            app:layout_constraintTop_toBottomOf="@+id/greenRacer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>

</android.support.constraint.ConstraintLayout>